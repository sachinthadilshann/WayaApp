<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    app:cardElevation="16dp"
    android:backgroundTint="#1F4287">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/societyDp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/societySname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="3dp"
            android:padding="2dp"
            android:layout_marginStart="130dp"
            android:textColor="#21E6C1"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/societyDp"
            app:layout_constraintTop_toBottomOf="parent" />

        <TextView
            android:id="@+id/societyLname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="130dp"
            android:elevation="3dp"
            android:padding="2dp"
            android:textColor="#21E6C1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/societyDp"
            app:layout_constraintTop_toBottomOf="@id/societySname" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/events1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_white"
        android:backgroundTint="#071E3D"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/events"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:src="@drawable/timetable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/events"
            android:orientation="vertical"
            android:textColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:text="Events/Announcements"
                android:textStyle="bold"

                android:textColor="#278EA5"

                android:textSize="22sp" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/jobs1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_white"
        android:backgroundTint="#071E3D"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/jobs"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:padding="10dp"
            android:src="@drawable/p4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/jobs"
            android:orientation="vertical"
            android:textColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:text="Jobs/Tasks"
                android:textStyle="bold"

                android:textColor="#278EA5"

                android:textSize="22sp" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/messages1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_white"
        android:backgroundTint="#071E3D"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/msg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_email_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/msg"
            android:orientation="vertical"
            android:textColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:text="Messages"
                android:textStyle="bold"

                android:textColor="#278EA5"

                android:textSize="22sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about11"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_white"
        android:backgroundTint="#071E3D"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/about"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:padding="2dp"
            android:src="@drawable/p6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/about"
            android:orientation="vertical"
            android:textColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:text="About"
                android:textStyle="bold"

                android:textColor="#278EA5"

                android:textSize="22sp" />
        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/members1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="460dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rectangle_white"
        android:backgroundTint="#071E3D"
        android:elevation="3dp">

        <ImageView
            android:id="@+id/members"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle"
            android:padding="5dp"
            android:src="@drawable/p5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/members"
            android:orientation="vertical"
            android:textColor="@color/cardview_dark_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:text="Members"
                android:textStyle="bold"

                android:textColor="#278EA5"

                android:textSize="22sp" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/addMemberBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#21E6C1"
        android:text="Join Society"
        android:textAlignment="center"
        android:textColor="#071E3D"
        android:textSize="12dp"></Button>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Create Event"
        android:backgroundTint="#278EA5"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:id="@+id/createEventBtn"></Button>
    <Button
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:textAlignment="center"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="16dp"
        android:text="Send a Message"
        android:backgroundTint="#278EA5"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:id="@+id/sendMsgBtn"></Button>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:textAlignment="center"
        android:layout_marginStart="260dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Post a Job"
        android:backgroundTint="#278EA5"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:id="@+id/postJobBtn"></Button>
</androidx.cardview.widget.CardView>